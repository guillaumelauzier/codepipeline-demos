{
    "pipeline": {
        "name": "demo-app",
        "roleArn": "arn:aws:iam::YOURACCOUNTNUMER:role/codepipeline-service-role",
        "artifactStore": {
            "type": "S3",
            "location": "demo-app-DATE"
        },
        "stages": [
            {
                "name": "Source",
                "actions": [
                    {
                        "name": "Source",
                        "actionTypeId": {
                            "category": "Source",
                            "owner": "AWS",
                            "provider": "CodeCommit",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {
                            "BranchName": "master",
                            "PollForSourceChanges": "false",
                            "RepositoryName": "pipeline-demo"
                        },
                        "outputArtifacts": [
                            {
                                "name": "MyApp"
                            }
                        ],
                        "inputArtifacts": []
                    }
                ]
            },
            {
                "name": "Deploy",
                "actions": [
                    {
                        "name": "demo-app-bluegreen",
                        "actionTypeId": {
                            "category": "Deploy",
                            "owner": "AWS",
                            "provider": "CodeDeploy",
                            "version": "1"
                        },
                        "runOrder": 1,
                        "configuration": {
                            "ApplicationName": "demo-app",
                            "DeploymentGroupName": "demo-app-bluegreen"
                        },
                        "outputArtifacts": [],
                        "inputArtifacts": [
                            {
                                "name": "MyApp"
                            }
                        ]
                    }
                ]
            }
        ],
        "version": 1
    }
}